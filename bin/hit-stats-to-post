#!/usr/bin/ruby
require 'csv'
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))

puts '---'
puts 'layout: post'
puts 'title: Varnish hit stats'
puts 'tags: [varnish hit stats]'
puts '---'

csv = CSV.parse(STDIN.read) 

headers = csv.shift

puts '|_. ' + headers.map{|h| h.strip}.join(' |_. ') + ' |'

csv.each do |row|
	puts '| ' + row.map{|h| h.strip}.join(' | ') + ' |'
end

